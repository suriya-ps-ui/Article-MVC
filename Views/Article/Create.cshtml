@model Model.Article
@{
    ViewData["Title"] = "Create or Update";
}
<!-- Bootstrap CSS (add this if not in _Layout.cshtml) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<header class="bg-dark text-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Assest Management Service</h1>
            <nav>
                <a href="/Account/Logout" class="text-white text-decoration-none">Logout</a>
            </nav>
        </div>
</header>

<div class="container mt-5">
    <h2 class="text-center mb-4">Creating or Updating Record</h2>
    <h4 class="text-center mb-4">Enter existing ID to Update</h4>
    <form action="/Article/Create" method="post" class="row g-3">
        <div class="col-md-6">
            <label for="articleId" class="form-label">Article ID</label>
            <input name="articleId" type="text" class="form-control" id="articleId" value="@Model?.articleId" placeholder="Enter article ID" />
        </div>
        <div class="col-md-6">
            <label for="articleTitle" class="form-label">Article Title</label>
            <input name="articleTitle" type="text" class="form-control" id="articleTitle" value="@Model?.articleTitle" placeholder="Enter article title" />
        </div>
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary">Create or Update</button>
        </div>
    </form>
    <p class="text-center">
                <a href="/Article/Index" class="btn btn-secondary">Back</a>
    </p>
</div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Articles Management Service</p>
    </div>
</footer>