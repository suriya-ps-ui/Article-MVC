@model List<Model.Article>
@{
    ViewData["Title"] = "Articles";
}
<!-- Bootstrap CSS (add this if not in _Layout.cshtml) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<header class="bg-dark text-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Assest Management Service</h1>
            <nav>
                <a href="/Account/Logout" class="text-white text-decoration-danger">Logout</a>
            </nav>
        </div>
</header>

<h2 class="text-center my-4">Articles</h2>

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <form action="/Article/Create" method="get">
                <button type="submit" class="btn btn-primary">Create or Update</button>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var article in Model)
            {
                <tr>
                    <td>@article.articleId</td>
                    <td>@article.articleTitle</td>
                    <td>
                        <form action="/Article/Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@article.articleId" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <div class="container">
        <p class="mb-0">Articles Management Service</p>
    </div>
</footer>